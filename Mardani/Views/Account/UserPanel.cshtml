@model DataAccessLayer.Entities.User
@{
    ViewData["Title"] = "پنل کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">پنل کاربر</h1>
<a style="margin-right:300px;"  class="btn btn-warning btn-sm" onclick="EditUserPanel()">ویرایش اطلاعات</a>
<hr />
<div class="offset-2">
    <div class="row">
        <div class="offset-3">

            <ul style="list-style:none ; ">
                <li style="background-color:lavender; font-size:18px; margin:10px; padding:10px;" class="text-center"> نام و نام خانوادگی : @Model.FullName</li>
                <li style="background-color:lavender; font-size:18px; margin:10px; padding:10px;" class="text-center"> ایمیل : @Model.Email</li>
                <li style="background-color:lavender; font-size:18px; margin:10px; padding:10px;" class="text-center"> نوع دسترسی : @Model.Role.Name </li>
                <li style="background-color:lavender; font-size:18px; margin:10px; padding:10px;" class="text-center"> وضعیت حساب : @((Model.IsActive)?"فعال":"غیرفعال") </li>

            </ul>

        </div>


    </div>
    <div class="row" >
        <div id="TestRecord" >

        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:lavender">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="ModalBody">

                </div>
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>*@
        </div>
    </div>
</div>

@section MardaniUser{

    <script>
        

        function EditUserPanel(id) {
            $.get("/Account/EditUserPanel", function (result) {
                $("#myModal").modal('show');
                $("#ModalBody").html(result);
            });
        }


        
        
    </script>

}

<script>
    window.onload = function () {
        $.get("/Account/TestDetail", function (result) {
            $("#TestRecord").html(result);
        });
    };
</script>


